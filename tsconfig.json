{
    "compilerOptions": {
        "rootDir": "src",
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "/node_modules"
    ]
}
